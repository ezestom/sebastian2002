---
interface Props {
	titleEsp?: string;
	bodyEsp?: string;
	href?: string;
	target?: string | undefined;
	bodyEng?: string;
	titleEng?: string;
}

const { href, titleEsp, bodyEsp, bodyEng, titleEng } = Astro.props;
---

<article class="link-card">
	<a href={href} target={Astro.props.target}>
		<h2>
			{titleEsp}
			<span>&rarr;</span>
		</h2>
		<p class="card-body">
			{bodyEsp}
		</p>
	</a>
</article>
<style>
	.link-card {
		height: 100%;
		list-style: none;
		display: flex;
		padding: 1px;
		/* background-color: #23262d; */
		background-size: 400%;
		border-radius: 8px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		text-align: center;
		width: 100%;
		text-decoration: none;
		line-height: 1;
		border-radius: 8px;
		color: white;
		/* background-color: #23262d; */
		background-color: #0d1b2a;
		opacity: 0.9;
	}

	h2 {
		/* background-color: rgba(255, 255, 255, 0.1); */
		border-radius: 6px 6px 0 0;
		padding: 0.25rem;
		font-weight: bold;
		font-size: 1.25em;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		display: grid;
		align-items: center;
		width: 100%;
		padding: 0.25rem;
		height: auto;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
