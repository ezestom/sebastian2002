---
import { Image } from "astro:assets";
import warrior from "../img/warrior5.jpg";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Error">
	<section class="h-screen w-screen">
		<Image class="warrior" src={warrior} alt="warrior" />
		<article class="absolute max-w-md mr-auto">
			<Card
				href="/home"
				titleEsp="Esta ruta no existe! Volver al home"
				bodyEsp="Parece que te has perdido, no te preocupes, haz click aquí para seguir explorando la web, te regresaré al inicio..."
			/>
		</article>
	</section>
</Layout>

<style>
	.warrior {
		width: 100%;
		height: 100vh;
		object-fit: cover;
		background-image: radial-gradient(
				circle,
				rgba(0, 0, 0, 0.8) 50%,
				transparent 100%
			),
			radial-gradient(circle, transparent 0%, rgba(0, 0, 0, 0.8) 50%),
			linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0)),
			linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
		mask: radial-gradient(circle at center, white 15%, transparent 65%);
	}
	section {
		width: 100%;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	section:before {
		z-index: -1;
		content: "";
		position: absolute;
		background-image: url("../img/war1.jpg");
		view-transition-name: fade;
		background-size: cover;
		background-position: bottom;
		height: 100%;
		width: 100%;
		opacity: 0.2;
	}
	article {
		filter: drop-shadow(0 0 0.25rem white);
	}
</style>
