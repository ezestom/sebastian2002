<style>
	.logoOficial {
		animation: pulse 5s infinite ease;
		opacity: 0.85;
	}
	.logoOficial:hover {
		transform: scale(1.03) rotate(3deg);
	}
	.icon {
		view-transition-name: king;
	}
	.icon2 {
		view-transition-name: pawn;
	}
	.icon3 {
		view-transition-name: rook;
	}
	.icon4 {
		view-transition-name: horse;
	}

	.about-conteiner {
		color: #d3d4d5;
		height: 100%;
		background-size: 400%;
		border-radius: 8px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		background-image: url("../img/about.jpeg");
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
		transition: all 0.3s ease-in-out;
	}
	.about {
		background-color: #23262dd9;
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: bold;
		font-size: 1.25em;
	}
	.about-conteiner:hover,
	.redbull:hover {
		background-position: center;
		transform: scale(1.02);
	}

	.redbull {
		view-transition-name: redbull;
		transition: all 0.3s ease-in-out;
	}

	li {
		overflow: hidden;
	}
	section {
		position: relative;
		box-sizing: border-box;
		padding: 0;
		margin: 0;
		color: white;
		font-size: 20px;
		max-width: 100vw;
		max-height: 100vh;
	}
	.video {
		overflow: hidden;
		background-color: rgba(255, 255, 255, 0.1);
		display: grid;
		align-items: center;
		transition: all 0.3s ease-in-out;
	}
	.video:hover {
		filter: drop-shadow(0px 0px 10px #45d3e0);
		animation: pulse 4s infinite ease;
	}
	@keyframes pulse {
		0% {
			filter: drop-shadow(0px 0px 0.25em #45d3e0);
		}
		25% {
			filter: drop-shadow(0px 0px 0.75em #45d3e0);
		}
		50% {
			filter: drop-shadow(0px 0px 2em #45d3e0);
		}
		75% {
			filter: drop-shadow(0px 0px 0.75em #45d3e0);
		}
		100% {
			filter: drop-shadow(0px 0px 0.25em #45d3e0);
		}
	}
	@media (width < 950px) {
		.icon,
		.icon2,
		.icon3,
		.icon4 {
			display: none;
		}

		ul {
			position: absolute;
			top: 7rem;
			grid-template-columns: repeat(2, 1fr);
			grid-template-rows: repeat(6, 1fr);
			padding: 0 1%;
			height: 100%;
			margin-bottom: 2rem;
		}
		li {
			height: 125px;
		}
		/* sobre mi */
		li:nth-child(1) {
			grid-column: 1/3;
			grid-row: 1/3;
			height: 250px;
		}
		/* link youtube */
		li:nth-child(2) {
			grid-column: 1/2;
			grid-row: 6/7;
		}

		li:nth-child(3) {
			grid-column: 2/3;
			grid-row: 5/7;
		}
		/*twitter */
		li:nth-child(4) {
			grid-column: 1/2;
			grid-row: 4/5;
		}
		/* prÃ³x torneos */
		li:nth-child(5) {
			grid-column: 1/3;
			grid-row: 5/6;
		}
		/* clases aoe */
		li:nth-child(6) {
			grid-column: 2/3;
			grid-row: 4/5;
		}
		li:nth-child(7) {
			grid-column: 2/3;
			grid-row: 6/7;
		}
		/* video youtube */
		li:nth-child(8) {
			grid-column: 1/3;
			grid-row: 7/8;
			height: 250px;
		}

		/* discord */
		li:nth-child(9) {
			grid-column: 2/3;
			grid-row: 8/9;
			margin-bottom: 1rem;
		}
		.redbull {
			display: none;
		}
	}
</style>
